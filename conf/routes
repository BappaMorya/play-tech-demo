# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET		/pappu						controllers.Application.pappu()
GET		/record						controllers.Application.record()
POST	/record						controllers.Application.newRecord()
POST	/finalposts					controllers.Application.finalposts()
POST	/delrecord/:id				controllers.Application.delrecord(id: Long)
GET		/fbsignin					controllers.Application.fbsignin()
GET		/landing					controllers.Application.landing()
GET		/home						controllers.Application.home()
GET		/datastream/:uid			controllers.Application.datastream(uid: String)
GET		/clearsession				controllers.Application.clearsession()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
